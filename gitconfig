[apply]
	whitespace = nowarn
[core]
	editor = mate -w
[merge]
	tool = opendiff
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = green
	local = yellow
	remote = cyan
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	co = checkout
	d = dcommit